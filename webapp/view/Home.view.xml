<mvc:View controllerName="com.lab2dev.firstapplication.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
            <List 
                id="_IDGenList1"
                headerText="Products"
                items="{listItems>/}"
            > 
                <StandardListItem  
                    type="Active"
                    press="showMessageToast"
                    title="{listItems>name}"
                    counter="{listItems>count}"
                />
            </List>
    </Page>
</mvc:View>
