<mvc:View controllerName="com.lab2dev.firstapplication.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
            <List 
                id="_IDGenList1"
                headerText="Products"
                items="{productsList>/}"
            > 
                <ObjectListItem  
                    type="Active"
                    press="showMessageToast"
                    title="{productsList>Name}"
                    number="{
                        parts:[{path: 'productsList>Price'}, {path: 'productsList>CurrencyCode'}],
                        type: 'sap.ui.model.type.Currency',
                        formatOptions: {showMeasure: false}
                            }"
                    numberUnit="{productsList>CurrencyCode}"
                > 
                <firstStatus>
                    <ObjectStatus
                        text="{productsList>Status}"
                        state="{
                            path: 'productsList>Status',
                            formatter: 'com.lab2dev.firstapplication.controller.Formatter.status'
                        }" />
			    </firstStatus>
                <ObjectAttribute text="{productsList>WeightMeasure} {productsList>WeightUnit}" />
                <ObjectAttribute text="{productsList>Width} x {productsList>Depth} x {productsList>Height} {productsList>DimUnit}" />
                </ObjectListItem>
            </List>
    </Page>
</mvc:View>
